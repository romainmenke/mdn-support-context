{
	"name": "@rmenke/mdn-support-context",
	"private": true,
	"version": "1.0.19",
	"description": "",
	"author": {
		"email": "romainmenke@gmail.com",
		"name": "Romain Menke"
	},
	"license": "MIT",
	"browserslist": "last 4 Chrome versions, last 4 Firefox versions",
	"source": [
		"./src/options.js",
		"./src/support-context.js"
	],
	"targets": {
		"options": {
			"context": "browser",
			"distDir": "./mdn-support-context/",
			"outputFormat": "global",
			"source": "./src/options.js"
		},
		"support-context": {
			"context": "browser",
			"distDir": "./mdn-support-context/scripts/",
			"outputFormat": "global",
			"source": "./src/support-context.js"
		},
		"userscript": {
			"context": "browser",
			"distDir": "./userscript",
			"outputFormat": "global",
			"source": "./src/support-context.user.js"
		}
	},
	"scripts": {
		"watch": "parcel watch",
		"prebuild": "node ./prepare-bcd.mjs",
		"build": "parcel build --no-source-maps && web-ext build --overwrite-dest --source-dir ./mdn-support-context && node ./add-userscript-header.js",
		"lint": "web-ext lint --source-dir ./mdn-support-context",
		"web-ext": "web-ext"
	},
	"devDependencies": {
		"@mdn/browser-compat-data": "^5.2.57",
		"browserslist": "^4.21.5",
		"parcel": "^2.9.0",
		"web-ext": "^7.6.2"
	}
}
